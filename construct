
    using System;  
    class calculator {  
        static int number1, number2, total;  
        calculator() {  
            number1 = 10;  
            number2 = 20;  
        }  
        public void AddNumber() {  
            total = number1 + number2;  
        }  
        public void Display() {  
            Console.WriteLine("The total is" + total);  
        }  
        public static void Main(string[] agrs) {  
            calculator calc = new calculator();  
            calc.AddNumber();  
            calc.Display();  
        }  
    }  
